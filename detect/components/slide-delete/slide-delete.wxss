/* components/slide-delete/slide-delete.wxss */

.slide {
  width: 100%;
  height: 168rpx;
  position: relative;
  display: flex;
  flex-direction: row-reverse;
  background: #fff;
}

.slide-btn {
  width: 100%;
  font-size: 28rpx;
  color: #fff;
  background: #fff;
  display: flex;
  flex-direction: row-reverse;
}

.slide-btn view {
  width: 140rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-btn view:nth-child(1) {
  background: #ff4549;
}

.slide-btn view:nth-child(2) {
  background: #ff8407;
}

.slide-cont {
  width: 100%;
  min-height: 180rpx;
  display: flex;
  background: #fff;
  position: absolute;
  z-index: 1;
  transition: all 200ms ease-out;
}
